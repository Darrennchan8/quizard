<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="6dp"
    android:id="@+id/multiple_choice_item"
    android:clickable="true"
    android:focusable="true">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correctness_box"
        app:layout_constraintTop_toTopOf="@+id/answer_choice"
        app:layout_constraintBottom_toBottomOf="@+id/answer_choice"/>
    <EditText
        android:id="@+id/answer_choice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/answer_choice"
        android:layout_weight="1"
        android:inputType="text|textAutoCorrect|textCapWords"
        app:layout_constraintLeft_toRightOf="@+id/correctness_box"
        app:layout_constraintRight_toLeftOf="@+id/delete_btn"
        android:background="@android:color/transparent"
        android:padding="8dp"/>
    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_answer_choice"
        android:contentDescription="@string/delete_answer_choice"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/answer_choice"
        app:layout_constraintBottom_toBottomOf="@id/answer_choice"
        android:visibility="gone"
        android:focusable="true"
        android:clickable="true"/>

</android.support.constraint.ConstraintLayout>