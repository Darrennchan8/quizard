<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cmsc355.groupF.quizard.QuestionViewFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="1dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:text="Question "
        android:textAllCaps="true"
        android:textSize="26sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/question_num"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/question_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/question_number"
        android:textAllCaps="true"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" of "
        android:textAllCaps="true"
        android:textSize="26sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/question_num"
        app:layout_constraintEnd_toStartOf="@+id/num_questions"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/num_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/question_total"
        android:textAllCaps="true"
        android:textSize="26sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2" />


    <TextView
        android:id="@+id/question_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        tools:text="QUESTION TEXT HERE"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_num" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/multiple_choice_answer_section"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/question_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:id="@+id/answer_choice_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<!--            <include
                android:id="@+id/multiple_choice_answer"
                layout="@layout/multiple_choice_answer" />-->
        </LinearLayout>
    </ScrollView>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/short_response_answer"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/question_text"
        android:visibility="gone">
        <EditText
            android:id="@+id/short_response_answer_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/correct_answer"
            android:inputType="text|textAutoCorrect"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
