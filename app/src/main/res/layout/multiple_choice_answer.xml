<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="horizontal"
android:padding="6dp"
android:id="@+id/multiple_choice_item"
android:clickable="true"
android:focusable="true">
<RadioButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/selection_button"
    app:layout_constraintTop_toTopOf="@+id/answer_option"
    app:layout_constraintBottom_toBottomOf="@+id/answer_option"/>
<TextView
    android:id="@+id/answer_option"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    tools:text="MULTIPLE CHOICE ANSWER HERE"
    android:layout_weight="1"
    android:inputType="text|textAutoCorrect|textCapWords"
    app:layout_constraintLeft_toRightOf="@+id/selection_button"
    android:background="@android:color/transparent"
    android:padding="8dp"/>

</android.support.constraint.ConstraintLayout>